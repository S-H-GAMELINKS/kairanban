<div class="container mt-md-3">
  <div class="h2">
    お知らせ一覧
  </div>

  <p id="notice"><%= notice %></p>
  <div class="row">
    <% @notices.each do |notice| %>
      <div class="col-md-4 mt-3 mt-md-3 mt-sm-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= notice.title %></h5>
            <p class="card-text">
              <%= truncate(notice.content, length: 20) %>
            </p>
            <div class="my-auto">
              <%= link_to '確認', notice %>
              <%= link_to '編集', edit_notice_path(notice) %>
              <%= link_to '削除', notice, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-md-5">
    <%= paginate @notices %>
  </div>

  <div class="mt-3 mt-md-3 mt-sm-3">
    <%= link_to "新しいお知らせを作る", new_notice_path, class: "btn btn-info" %>
  </div>
</div>
